<setting url="{{ route('api_user_update') }}" inline-template>
    <div class="setting modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        {{ trans('messages.setting.plural') }}
                    </h4>
                </div>
                <form method="post" @submit.prevent="submit()">
                    <div class="panel-body">
                        <div class="form-group" :class="{'has-error': hasError('email')}">
                            <label class="control-label required" for="email">
                                {{ trans('validation.attributes.email') }}
                            </label>
                            <input id="email"
                                   class="form-control input-lg"
                                   type="email"
                                   name="email"
                                   v-model="form.email"
                                   placeholder="{{ trans('validation.attributes.email') }}" required>
                            <span v-if="hasError('email')" class="help-block">
                                <strong>{{ vue("error('email')") }}</strong>
                            </span>
                        </div>
                        <div class="form-group" :class="{'has-error': hasError('password')}">
                            <label class="control-label" for="password">
                                {{ trans('validation.attributes.password') }}
                            </label>
                            <input id="password"
                                   class="form-control input-lg"
                                   type="password"
                                   name="password"
                                   v-model="form.password"
                                   placeholder="{{ trans('validation.attributes.password') }}">
                            <span v-if="hasError('password')" class="help-block">
                                <strong>{{ vue("error('password')") }}</strong>
                            </span>
                        </div>
                        <div class="form-group" :class="{'has-error': hasError('password_confirmation')}">
                            <label class="control-label" for="password_confirmation">
                                {{ trans('validation.attributes.password_confirmation') }}
                            </label>
                            <input id="password_confirmation"
                                   class="form-control input-lg"
                                   type="password"
                                   name="password_confirmation"
                                   v-model="form.password_confirmation"
                                   placeholder="{{ trans('validation.attributes.password_confirmation') }}">
                            <span v-if="hasError('password_confirmation')" class="help-block">
                                <strong>{{ vue("error('password_confirmation')") }}</strong>
                            </span>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button class="btn btn-info btn-lg btn-block" type="submit">
                            {{ trans('messages.save') }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</setting>
