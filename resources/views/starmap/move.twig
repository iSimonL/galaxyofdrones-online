<move :types="{{ {
          'scout': constant('Koodilab\\Models\\Movement::TYPE_SCOUT'),
          'attack': constant('Koodilab\\Models\\Movement::TYPE_ATTACK'),
          'occupy': constant('Koodilab\\Models\\Movement::TYPE_OCCUPY'),
          'support': constant('Koodilab\\Models\\Movement::TYPE_SUPPORT'),
          'transport': constant('Koodilab\\Models\\Movement::TYPE_TRANSPORT')
      }|json_encode }}"
      :unit-types="{{ {
          'transporter': constant('Koodilab\\Models\\Unit::TYPE_TRANSPORTER'),
          'scout': constant('Koodilab\\Models\\Unit::TYPE_SCOUT'),
          'fighter': constant('Koodilab\\Models\\Unit::TYPE_FIGHTER'),
          'heavyFighter': constant('Koodilab\\Models\\Unit::TYPE_HEAVY_FIGHTER'),
          'settler': constant('Koodilab\\Models\\Unit::TYPE_SETTLER')
      }|json_encode }}"
