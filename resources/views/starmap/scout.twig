<div v-if="isScoutType" class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            &times;
        </button>
        <h4 class="modal-title">
            {{ trans('messages.movement.scout') }}
        </h4>
    </div>
    {% include 'starmap.time' %}
    <div class="modal-body separator">
        <div class="row">
            <div class="col-md-6 text-center">
                <span class="item" :class="scoutUnit | item('unit')"></span>
            </div>
            <div class="col-md-6">
                <h4>
                    {{ vue('scoutUnit.name') }}
                </h4>
                <p>
                    {{ vue('scoutUnit.description') }}
                </p>
                <div class="attribute-row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-btn" @click="setTotalUnit(scoutUnit)">
                                    <button class="btn btn-info btn-block">
                                        <i class="icon-sum"></i>
                                    </button>
                                </div>
                                <input class="form-control"
                                       type="number"
                                       min="1"
                                       :max="unitQuantity(scoutUnit)"
                                       :placeholder="unitQuantity(scoutUnit) | bracket"
                                       v-model.number="quantity[scoutUnit.id]">
                                <span class="input-group-btn">
                                    <button class="btn btn-info btn-block" :disabled="!canScout" @click="scout()">
                                        {{ trans('messages.movement.scout') }}
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
