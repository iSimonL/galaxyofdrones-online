<upgrade :central-type="{{ constant('Koodilab\\Models\\Building::TYPE_CENTRAL') }}"
         url="{{ route('api_upgrade', '__grid__') }}"
         store-url="{{ route('api_upgrade_store', '__grid__') }}"
         destroy-url="{{ route('api_upgrade_destroy', '__grid__') }}" inline-template>
    <div class="upgrade modal fade" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        {{ vue('building.name') }}
                    </h4>
                </div>
                <div class="modal-body">
                    {% include 'surface.building' %}
                </div>

                {% include 'surface.producer' %}
                {% include 'surface.scout' %}
                {% include 'surface.trader' %}
                {% include 'surface.trainer' %}
            </div>
        </div>
    </div>
</upgrade>
