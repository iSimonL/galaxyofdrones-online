{% extends 'layouts.main' %}

{% set subtitle = trans('messages.start') %}

{% block body %}
    <section id="app" class="container-app container-app-standalone">
        <a class="logo" href="{{ route('home') }}">
            <img class="img-responsive" src="{{ asset('images/logo.png') }}" alt="{{ title }}">
        </a>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="icon-globe"></i>
                    {{ subtitle }}
                </h3>
            </div>
            {% if count %}
                <form action="{{ route('start') }}" method="post">
                    {{ csrf_field() }}

                    <div class="panel-body text-center">
                        <span class="item planet-1"></span>
                        <h3>{{ trans_choice('messages.planet.free', count) }}</h3>
                    </div>
                    <div class="panel-footer">
                        <button class="btn btn-info btn-lg btn-block" type="submit">
                            {{ trans('messages.planet.first') }}
                        </button>
                    </div>
                </form>
            {% else %}
                <div class="panel-body text-center">
                    <h3>{{ trans('messages.warning.server') }}</h3>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}
