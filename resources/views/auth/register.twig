{% extends 'layouts.main' %}

{% set subtitle = trans('messages.auth.register') %}

{% block body %}
    <section id="app" class="container-app container-app-standalone">
        <a class="logo" href="{{ route('home') }}">
            <img class="img-responsive" src="{{ asset('images/logo.png') }}" alt="{{ title }}">
        </a>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="icon-login"></i>
                    {{ subtitle }}
                </h3>
            </div>
            <form action="{{ route('register') }}" method="post">
                {{ csrf_field() }}

                <div class="panel-body">
                    <div class="form-group {{ errors.has('username') ? 'has-error' }}">
                        <label class="control-label required" for="username">
                            {{ trans('validation.attributes.username') }}
                        </label>
                        <input id="username"
                               class="form-control input-lg"
                               type="text"
                               name="username"
                               value="{{ old('username') }}"
                               placeholder="{{ trans('validation.attributes.username') }}" required>
                        {% if errors.has('username') %}
                            <span class="help-block">
                                <strong>{{ errors.first('username') }}</strong>
                            </span>
                        {% endif %}
                    </div>
                    <div class="form-group {{ errors.has('email') ? 'has-error' }}">
                        <label class="control-label required" for="email">
                            {{ trans('validation.attributes.email') }}
                        </label>
                        <input id="email"
                               class="form-control input-lg"
                               type="email"
                               name="email"
                               value="{{ old('email') }}"
                               placeholder="{{ trans('validation.attributes.email') }}" required>
                        {% if errors.has('email') %}
                            <span class="help-block">
                                <strong>{{ errors.first('email') }}</strong>
                            </span>
                        {% endif %}
                    </div>
                    <div class="form-group {{ errors.has('password') ? 'has-error' }}">
                        <label class="control-label required" for="password">
                            {{ trans('validation.attributes.password') }}
                        </label>
                        <input id="password"
                               class="form-control input-lg"
                               type="password"
                               name="password"
                               placeholder="{{ trans('validation.attributes.password') }}" required>
                        {% if errors.has('password') %}
                            <span class="help-block">
                                <strong>{{ errors.first('password') }}</strong>
                            </span>
                        {% endif %}
                    </div>
                    <div class="form-group {{ errors.has('password_confirmation') ? 'has-error' }}">
                        <label class="control-label required" for="password_confirmation">
                            {{ trans('validation.attributes.password_confirmation') }}
                        </label>
                        <input id="password_confirmation"
                               class="form-control input-lg"
                               type="password"
                               name="password_confirmation"
                               placeholder="{{ trans('validation.attributes.password_confirmation') }}" required>
                        {% if errors.has('password_confirmation') %}
                            <span class="help-block">
                                <strong>{{ errors.first('password') }}</strong>
                            </span>
                        {% endif %}
                    </div>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-info btn-lg btn-block" type="submit">
                        {{ subtitle }}
                    </button>
                </div>
                <div class="panel-footer text-center">
                    <p>
                        <a href="{{ route('password.request') }}">
                            {{ trans('messages.auth.forgot') }}
                        </a>
                    </p>
                    <p>
                        {{ trans('messages.auth.already_have') }}
                        <a href="{{ route('login') }}">
                            {{ trans('messages.auth.login') }}
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include('partials.flash') %}
{% endblock %}
